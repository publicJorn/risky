{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": ["ESNext"],
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  }
}
